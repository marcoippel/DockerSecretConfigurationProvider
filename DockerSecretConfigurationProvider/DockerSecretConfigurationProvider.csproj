    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company>Ippelsoft</Company>
    <Authors>Marco Ippel</Authors>
    <PackageProjectUrl>https://github.com/marcoippel/DockerSecretConfigurationProvider</PackageProjectUrl>
    <RepositoryUrl>https://github.com/marcoippel/DockerSecretConfigurationProvider</RepositoryUrl>
